                                    <GridPane.margin>
                                        <Insets left="5.0" />
                                    </GridPane.margin>
                                </Text>
                                <Button mnemonicParsing="false" onAction="#getStopWordsPath" prefHeight="25.0" prefWidth="139.0" text="Stop-words path" GridPane.rowIndex="3" />
